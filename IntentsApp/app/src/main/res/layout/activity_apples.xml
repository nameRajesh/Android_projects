<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applesId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11FF11"
    tools:context="com.example.idebus.intentsapp.Apples">

    <TextView
        android:id="@+id/AppleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="Apple"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="50dp" />

    <Button
        android:id="@+id/applesBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/AppleText"
        android:layout_alignRight="@+id/AppleText"
        android:layout_below="@+id/AppleText"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="109dp"
        android:text="GO TO BACON"
        android:onClick="onClick" />

    <EditText
        android:id="@+id/appleInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AppleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>
